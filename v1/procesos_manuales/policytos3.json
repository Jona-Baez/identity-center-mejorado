{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": "s3:ListAllMyBuckets",
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": [
                "arn:aws:s3:::op-services-files",
                "arn:aws:s3:::op-services-files/*",
                "arn:aws:s3:::op-services-files-per",
                "arn:aws:s3:::op-services-files-per/*"  
            ]
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": [
				"s3:PutObject",
				"s3:Get*",
				"s3:ListBucket"
			],
            "Resource": [
                "arn:aws:s3:::op-services-files",
                "arn:aws:s3:::op-services-files/*",
                "arn:aws:s3:::op-services-files-per",
                "arn:aws:s3:::op-services-files-per/*" 
            ]
        }
    ]
}
